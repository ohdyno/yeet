#!/usr/bin/env python3
"""Single-file launcher that delegates to `mise run dev`."""

from __future__ import annotations

import shutil
import subprocess
import sys


def main() -> None:
    mise = shutil.which("mise")
    if mise is None:
        sys.stderr.write("Missing required executable 'mise'. Install it first.\n")
        raise SystemExit(1)

    command = [mise, "run", "dev"]
    if len(sys.argv) > 1:
        command.append("--")
        command.extend(sys.argv[1:])

    raise SystemExit(subprocess.call(command))


if __name__ == "__main__":
    main()
